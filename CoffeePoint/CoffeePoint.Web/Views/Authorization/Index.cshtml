@using Microsoft.AspNetCore.Mvc.Rendering
@model AuthorizationModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MeetMe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Authorization" asp-action="Index" class="navbar-brand">MeetMe</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </nav>
<div class="container body-content">
    <h1>Авторизация</h1>
    @using (Html.BeginForm("Authorize", "Authorization", FormMethod.Post))
    {
        @Html.ValidationSummary()
        <div class="form-group-lg">
            @Html.LabelFor(a => a.Username)
            @Html.TextBoxFor(a => a.Username, new {@class = "form-control"})
        </div>
        <div class="form-group-lg">
            @Html.LabelFor(a => a.Password)
            @Html.PasswordFor(a => a.Password, new {@class = "form-control"})
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Авторизоваться</button>
    }
</div>
    
    <hr/>
    <footer>
        <p>&copy; 2017 - MeetMe.Web</p>
    </footer>
</body>

        <script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
</html>
