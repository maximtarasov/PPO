<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coffee point</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Authorization" asp-action="Index" class="navbar-brand">MeetMe</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Адреса <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Regions" asp-action="Index">Регионы</a></li>
                            <li><a asp-area="" asp-controller="Cities" asp-action="Index">Города</a></li>
                        </ul>
                    </li>
                    <li><a asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a></li>
                    <li><a asp-area="" asp-controller="Profiles" asp-action="Index">Профили</a></li>
                    <li><a asp-area="" asp-controller="Requests" asp-action="Index">Заявки</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                    <li><a asp-area="" asp-controller="Authorization" asp-action="LogOut">Выход</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Coffee Point</p>
        </footer>
    </div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
